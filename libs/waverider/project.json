{
  "name": "waverider",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/waverider/src",
  "projectType": "library",
  "targets": {
    "genfiles": {
      "command": "npx ts-node -r tsconfig-paths/register -P libs/waverider/tsconfig.lib.json libs/waverider/src/index.gen.ts",
      "inputs": [
        "!{projectRoot}/src/**/*.gen.json",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/src/**/*.gen.json"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/waverider",
        "main": "libs/waverider/src/index.ts",
        "tsConfig": "libs/waverider/tsconfig.lib.json",
        "assets": [
          "libs/waverider/*.md"
        ]
      },
      "dependsOn": [
        "genfiles"
      ],
      "inputs": [
        "!{projectRoot}/**/*.gen.ts"
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs waverider {args.ver} {args.tag}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/waverider/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/waverider/jest.config.ts",
        "passWithNoTests": true
      },
      "dependsOn": [
        "genfiles"
      ]
    }
  },
  "tags": []
}
